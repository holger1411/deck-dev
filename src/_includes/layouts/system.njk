<!doctype html>
<html class="h-100" lang="{{ metadata.language }}">

  <head>
    {% include 'snippets/head.njk' %}
  </head>

  <body {% if (bodyModifier) %} class=" position-relative {{ bodyModifier }}" {% endif %} data-bs-spy="scroll" data-bs-target="#navScroll">
    <div class="h-100 container-fluid position-relative">
      <div class="h-100 row d-flex align-items-stretch position-relative z-1">
        {% if bgimg %}
          <div class="p-0 col-11 col-sm-10 col-md-9 col-lg-8 col-xl-7 col-xxl-5 d-flex align-items-start flex-column shadow position-relative">
          {% else %}
            <div class="p-0 col-12 d-flex align-items-start flex-column">
            {% endif %}
            <header class="mb-auto  py-vh-2 col-12 px-vw-5">
              {% include 'snippets/navbar.njk' %}
            </header>
            <main class="mb-auto col-12 px-vw-5">
              {{ content | safe }}
            </main>
            {% include 'snippets/footer.njk' %}
          </div>
          {% if bgimg %}
            <div class="col-1 col-sm-2 col-md-3 col-lg-4 col-xl-5 col-xxl-7 bg-cover py-vh-max py-lg-0 bg-black ba-local position-fixed top-0 end-0 z-0 h-100" {% bgImg bgimg %}  data-aos="fade"></div>
          {% endif %}
        </div>
      </div>
    </div>
        {% include 'snippets/scripts.njk' %}
  </body>

</html>
